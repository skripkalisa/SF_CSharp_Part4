@using CSBlog.Models.User
@model List<User>

@{
  ViewBag.Title = "title";
  Layout = "_Layout";
  var countHtml = $"<h2>{Model.Count} users</h2>";
}

@Html.Raw(countHtml)
<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Email</th>
  </tr>
  </thead>
  <tbody>

  @foreach (var user in Model)
  {
    <tr
      class="@(Convert.ToInt32(user.Id) % 2 == 0 ? "table-light" : "")">
      <th scope="row">@user.Id</th>
      <td>@user.FirstName</td>
      <td>@user.LastName</td>
      <td>@user.Email</td>
    </tr>
  }
  </tbody>
</table>

<div class="text-center">
  <p>Add a new <a  asp-area="" asp-controller="User" asp-action="Register">User</a>.</p>
</div>
