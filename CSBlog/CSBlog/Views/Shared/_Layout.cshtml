@using Microsoft.AspNetCore.Mvc.TagHelpers

@using CSBlog.Models.User
@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"] - CSBlog</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
  @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.1.0/journal/bootstrap.min.css"> *@
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
  @* <link rel="stylesheet" href="~/CSBlog.styles.css" asp-append-version="true"/> *@
  @* <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script> *@
  <script src="~/lib/tinymice/tinymce.min.js"></script>
</head>
<body>
<header>
  <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
      <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CSBlog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
              aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">

          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Index">Articles</a>
          </li>
          @* *@
          @* *@
          @* <li class="nav-item"> *@
          @*   <a class="nav-link text-dark" asp-area="" asp-controller="Comment" asp-action="Index">Comments</a> *@
          @* </li> *@
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Tag" asp-action="Index">Tags</a>
          </li>
          @* <li class="nav-item"> *@
          @*   <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a> *@
          @* </li> *@
          @* <li class="nav-item"> *@
          @*   <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Roles</a> *@
          @* </li> *@
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
          </li>
          @if (SignInManager.IsSignedIn(User))
          {
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Role Access Demo
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li class="nav-item">
                  <a class="dropdown-item" asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
                </li>
                <li>
                  <a class="dropdown-item" asp-area="" asp-controller="Role" asp-action="Moderator">Moderator</a>
                </li>
                <li>
                  <a class="dropdown-item" asp-area="" asp-controller="Role" asp-action="Admin">Admin</a>
                </li>
              </ul>
            </li>
          }
        </ul>
        <partial name="_LoginPartial"/>
      </div>
    </div>
  </nav>
</header>
<div class="container">
  <main role="main" class="pb-3">
    @RenderBody()
  </main>
</div>


