@inject CSBlog.Services.Auth AuthService

@{
  var authInfo = AuthService.ScopeAuthInfo;
}

@{
  System.Diagnostics.Debug.Assert(authInfo != null, nameof(authInfo) + " != null");
}
<ul class="navbar-nav">
  @if (authInfo.IsAuthenticated)
  {
    <li class="nav-item">
      <a class="nav-link text-dark">Hello @authInfo.FirstName!</a>
    </li>
    <li class="nav-item">
      <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
      </form>
    </li>
  }
  else
  {
    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Create">Register</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>
  }
</ul>