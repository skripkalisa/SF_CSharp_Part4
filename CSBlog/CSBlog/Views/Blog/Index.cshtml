@model ICollection<CSBlog.Models.Blog.Tag>
@{
  ViewData["Title"] = "All Tags Page";
  Layout = "_Layout";
}

<h2>Tags</h2>
<table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tag Name</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var tag in Model)
    {
      <tr>
        <th scope="row">@tag.TagName</th>
        <td>@tag.Id</td>

        <td>
          <a asp-controller="User" asp-action="Edit" asp-route-id="@tag.Id">Edit</a>
        </td>

      </tr>

