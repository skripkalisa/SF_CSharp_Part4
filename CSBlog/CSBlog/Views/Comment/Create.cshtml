@model CSBlog.Models.Blog.Comment

@{
  ViewBag.Title = "title";
  Layout = "_Layout";
}

<h2>Create a Comment</h2>

<form method="post" asp-controller="Comment" asp-action="Create">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <fieldset>
    <legend>Comment Fields</legend>
    <div class="form-group">
      <label asp-for="Text" for="comment-text" class="form-label mt-4"></label>
      <textarea asp-for="Text" class="form-control" id="comment-text" rows="3"></textarea>
      <span asp-validation-for="Text" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
  </fieldset>

</form>